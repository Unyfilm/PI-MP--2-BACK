{
  "name": "pi-mp-2-back",
  "version": "1.0.0",
  "description": "Backend for movie streaming platform - Mini Project #2",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:workflow": "jest tests/workflow.password-recovery.test.ts --verbose",
    "test:workflow:coverage": "jest tests/workflow.password-recovery.test.ts --coverage --verbose",
    "clean": "rimraf dist",
    "db:test": "ts-node setup-db.ts test",
    "db:seed": "ts-node setup-db.ts seed",
    "db:reset": "ts-node setup-db.ts reset",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build:prod": "npm run clean && npm run build",
    "health-check": "curl -f http://localhost:$PORT/health || exit 1",
    "validate:prod": "NODE_ENV=production ts-node -e \"import('./src/config/environment').then(({validateConfig}) => validateConfig())\"",
    "db:migrate:prod": "NODE_ENV=production ts-node setup-db.ts migrate",
    "migrate:age": "ts-node src/scripts/migrateAge.ts",
    "migrate:username": "ts-node src/scripts/migrateUsername.ts",
    "seed:movies": "ts-node src/scripts/seedMovies.ts"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "movies",
    "streaming",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.10",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
