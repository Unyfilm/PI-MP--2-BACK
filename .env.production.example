# Production Environment Variables for Render
# Configure these in Render Dashboard, NOT in your local .env

# ===== ENVIRONMENT =====
NODE_ENV=production

# ===== SERVER =====
PORT=10000

# ===== DATABASE PRODUCTION =====
# Replace with your actual production connection string
MONGODB_URI=mongodb+srv://movieapp_prod:YOUR_SECURE_PASSWORD@movieplatform-prod.xxxxx.mongodb.net/movie-streaming-prod?retryWrites=true&w=majority&appName=MoviePlatformProd

# ===== JWT PRODUCTION (Generate new secure keys) =====
JWT_SECRET=your-super-secure-jwt-key-for-production-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# ===== CLIENT URL =====
CLIENT_URL=https://your-frontend-domain.com

# ===== CLOUDINARY PRODUCTION =====
CLOUDINARY_CLOUD_NAME=your-prod-cloud-name
CLOUDINARY_API_KEY=your-prod-api-key
CLOUDINARY_API_SECRET=your-prod-api-secret

# ===== EMAIL PRODUCTION =====
EMAIL_SERVICE=gmail
EMAIL_USER=movieplatform.notifications@gmail.com
EMAIL_PASS=your-gmail-app-password-for-production

# ===== EXTERNAL APIS =====
PEXELS_API_KEY=your-pexels-api-key

# ===== PERFORMANCE OPTIMIZATION =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===== SECURITY =====
TRUST_PROXY=true
HELMET_CSP=true

# ===== MONITORING =====
LOG_LEVEL=info
ENABLE_CORS_LOGGING=false